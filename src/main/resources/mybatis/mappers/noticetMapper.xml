<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="noticeMapper">
  
  	<update id="noticeUpdate" parameterType="com.jy.s3.model.board.NoticeVO">
  		update notice set title=#{title}, contents=#{contents} where num=#{num}
  	</update>
  	
  	<select id="noticeList" resultType="com.jy.s3.model.board.NoticeVO">
  		select * from notice order by num desc
  	</select>
  	
  	<select id="noticeSelect" resultType="com.jy.s3.model.board.NoticeVO" parameterType="java.util.Map">
  		select * from notice where num = #{num}
  	</select>
  	
  	<insert id="noticeInsert" parameterType="com.jy.s3.model.board.NoticeVO">
  		insert into notice 
  		values(board_seq.nextval, #{title}, #{writer}, #{contents}, sysdate, 0)
  	</insert>
  	
  	<delete id="noticeDelete" parameterType="java.lang.Integer">
  		delete notice where num = #{num}
  	</delete>
  	
  </mapper>